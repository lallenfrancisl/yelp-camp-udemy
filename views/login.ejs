<%- include('partials/header') %>

<div class="overlay"></div>


<div class="container-fluid">
    <div class="row form-container d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-7 col-lg-6 col-xl-5">
            <div class="form">
                <h1 class="form-title">Login</h1>
                <form action="/login?returnUrl=<%= returnUrl %>" method="POST">
                    <label for="username">Username</label>
                    <input id="username" class="form-inp" type="text" name="username" placeholder="Username" required>
                    <label for="password">Password</label>
                    <input id="password" class="form-inp" type="password" name="password" placeholder="Password" required>
                    <button class="form-inp btn-pri" type="submit">Submit</button>
                </form>
                <a class="back-to-home" href="<%= returnUrl %>">< Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
