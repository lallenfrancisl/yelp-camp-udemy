<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!--add default styles -->
    <% for (let i = 0; i < defaultStyles.length; ++i) { %>
        <link rel="stylesheet" type="text/css" href="<%= defaultStyles[i] %>">
    <% } %>
    <!--add page specific styles -->
    <% for (let i = 0; i < styles.length; ++i) { %>
        <link rel="stylesheet" type="text/css" href="<%= styles[i] %>">
    <% } %>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400;600;700&display=swap" rel="stylesheet">
    <script type="module" src="https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.js"></script>
    <title>YelpCamp: The Web Developer Bootcamp Project</title>
</head>
<body>
    <!-- navbar section starts -->
    <nav>
        <div class="navbar-logo">
            <span class="sr-only">YelpCamp Logo</span>
            <strong>YelpCamp</strong>
        </div>
        <ul class="desktop-navbar">
            <li><a href="/">Home</a></li>
            <li><a href="/campgrounds">Campgrounds</a></li>
            <li><a href="/campgrounds/new">Add new</a></li>
            <% if(!user) { %>
                <li><a class="login-btn" href="<%= '/login' + '?returnUrl=' + currentUrl %>">Login</a></li>
                <li><a href="/register<%= '?returnUrl=' + currentUrl %> %>">Sign up</a></li>
            <% } else {%>
                <li><%= 'Welcome, ' + user.username %></li>
                <li><a href="/logout">log out</a></li>
            <% } %>
        </ul>
        <ul class="mobile-navbar hidden">
            <li><a href="/">Home</a></li>
            <li><a href="/campgrounds">Campgrounds</a></li>
            <li><a href="/campgrounds/new">Add new</a></li>
            <% if(!user) { %>
                <li><a class="login-btn" href="<%= '/login' + '?returnUrl=' + currentUrl %>">Login</a></li>
                <li><a href="/register<%= '?returnUrl=' + currentUrl %> %>">Sign up</a></li>
            <% } else {%>
                <li>Welcome, <%= user.username %></li>
                <li><a href="/logout">log out</a></li>
            <% } %>
            <li class="mobile close-mobile-navbar"><ion-icon name="close-outline" class="ion-md-close"></ion-icon></i></li>
        </ul>
        <ion-icon name="menu-outline" class="navbar-mobile-button ion-md-menu"></ion-icon>
    </nav>
    <!-- navbar section ends -->

